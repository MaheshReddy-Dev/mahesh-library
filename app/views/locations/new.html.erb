<%=render 'shared/errors', obj: @location%>

<h1>Add new location</h1>
<%=form_with(model: @location, local: true) do |f|%>
   <p>
   <%=f.label :location%>
    <%=f.text_field :name%>
   </p>
   <p>
     <%# <%=f.collection_select :region_id, Region.order(:id),:id,:name%> %>
     <%=f.hidden_field :region_id, value: params[:region_id]%> %>
   </p>
  <%=f.submit%>
<%end%>
