<%=render 'shared/errors', obj: @location%>

<h1>Edit the location</h1>
<%=form_with(model: @location, local: true) do |f|%>
  <p>
  <%=f.label :location%>
  <%=f.text_field :name%>
  <p>
  <%=f.label :Region%>
  <%=f.collection_select :region_id, Region.order(:id),:id,:name%>
  </p>
  <%=f.submit%>
<%end%>

<%= link_to 'Cancel and Return to locations page', locations_path %>
