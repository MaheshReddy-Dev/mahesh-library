<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>pages</th>
      <th>launchdate</th>
      <th>Author Name</th>
      <th>Library Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description%></td>
        <td><%= book.pages%></td></td>
        <td><%= book.launchdate%></td>
        <td><%= book.author.name %></td>
        <td><%= book.library.name %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Delete', book_path(book), data: {turbo_method: :delete, turbo_confirm: 'Are you sure want to delete?'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<p>
 <b>
   <%= link_to 'Authors listing page' , authors_path %> |
   <%= link_to 'Home  page' , companies_path%>
 </b>
</p>
