<h1>All regions</h1>

<table>
  <thead>
    <tr>
      <th>Region:</th>
      <th>Comapany:</th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= region.company.name%></td>
        <td><%= link_to 'Show' , region %></td>
        <td><%= link_to 'Delete', region_path(region), data: {turbo_method: :delete, turbo_confirm: 'Are you sure want to delete?'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<p>
 <b>
  <%=link_to 'Add new region', new_region_path%> |
  <%= link_to 'Return to home page' , companies_path %> |
  <%= link_to 'Add new location', new_location_path %> |
  <%= link_to 'View Locations', locations_path %>
 </b>
</p>
